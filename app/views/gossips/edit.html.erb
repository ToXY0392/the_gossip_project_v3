<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Édition</p>
      <h1 class="display-5 mb-3">Modifier ton potin</h1>
      <p class="lead text-body-secondary mb-0">
        Corrige ou affine les détails de ton potin croustillant.
      </p>
    </div>
  </div>
</section>

<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with model: @gossip, local: true do |form| %>
        <% if @gossip.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2 class="h6 mb-2"><%= pluralize(@gossip.errors.count, "erreur") %> ont empêché la mise à jour du potin :</h2>
            <ul class="mb-0">
              <% @gossip.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, "Titre", class: "form-label" %>
          <%= form.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :content, "Contenu", class: "form-label" %>
          <%= form.text_area :content, rows: 6, class: "form-control", required: true %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Mettre à jour", class: "btn btn-gossip" %>
          <%= link_to "Annuler", @gossip, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

