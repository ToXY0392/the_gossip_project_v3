<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Nouveau potin</p>
      <h1 class="display-5 mb-3">Publier un nouveau potin</h1>
      <p class="lead text-body-secondary mb-0">
        Partage la dernière rumeur croustillante avec la rédaction de The Gossip Project.
      </p>
    </div>
  </div>
</section>

<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with model: @gossip, local: true do |form| %>
        <% if @gossip.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2 class="h6 mb-2"><%= pluralize(@gossip.errors.count, "erreur") %> ont empêché la création du potin :</h2>
            <ul class="mb-0">
              <% @gossip.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, "Titre", class: "form-label" %>
          <%= form.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :content, "Contenu", class: "form-label" %>
          <%= form.text_area :content, rows: 6, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :tag_id, "Tag", class: "form-label" %>
          <%= form.collection_select :tag_id, @tags, :id, :title, { include_blank: "— Aucun tag —" }, { class: "form-select" } %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Créer le potin", class: "btn btn-gossip" %>
          <%= link_to "Annuler", root_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

