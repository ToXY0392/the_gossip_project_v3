<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Profil</p>
      <h1 class="display-5 mb-3">Créer ton profil</h1>
      <p class="lead text-body-secondary mb-0">
        Inscris-toi avec ton email et un mot de passe pour créer et commenter des potins.
      </p>
    </div>
  </div>
</section>

<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with model: @user, url: signup_path, local: true do |form| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2 class="h6 mb-2"><%= pluralize(@user.errors.count, "erreur") %> ont empêché la création du profil :</h2>
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :first_name, "Prénom", class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :last_name, "Nom", class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Mot de passe", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Créer mon profil", class: "btn btn-gossip" %>
          <%= link_to "Annuler", root_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

