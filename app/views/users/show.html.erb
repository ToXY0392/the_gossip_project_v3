<% if current_user && current_user.id == @user.id %>
  <section class="mb-4">
    <div class="d-flex flex-wrap gap-2">
      <%= link_to "Mes potins", user_path(@user), class: "btn btn-gossip" %>
      <%= link_to "Compte", user_path(@user), class: "btn btn-outline-secondary" %>
    </div>
  </section>
<% end %>

<section class="row g-4">
  <div class="col-12 col-lg-4">
    <div class="card shadow-sm h-100 border-secondary-subtle">
      <div class="card-body">
        <p class="gossip-kicker text-uppercase mb-2">Profil source</p>
        <h1 class="h2 mb-1"><%= @user.first_name %> <%= @user.last_name %></h1>
        <p class="text-body-secondary mb-4">Correspondant local</p>

        <ul class="list-group list-group-flush">
          <li class="list-group-item bg-transparent px-0">
            <span class="text-body-secondary d-block small">Email</span>
            <span class="fw-medium"><%= @user.email %></span>
          </li>
          <li class="list-group-item bg-transparent px-0">
            <span class="text-body-secondary d-block small">Ville</span>
            <span class="fw-medium"><%= @user.city.name %></span>
          </li>
          <li class="list-group-item bg-transparent px-0">
            <span class="text-body-secondary d-block small">Publications</span>
            <span class="badge text-bg-danger"><%= @user.gossips.count %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-8">
    <div class="card shadow-sm border-secondary-subtle">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
          <h2 class="h4 mb-0"><%= current_user && current_user.id == @user.id ? "Mes potins" : "Gossips publiés" %></h2>
          <% if current_user && current_user.id == @user.id %>
            <%= link_to "Ajouter un potin", new_gossip_path, class: "btn btn-gossip btn-sm" %>
          <% end %>
        </div>

        <div class="list-group list-group-flush">
          <% @user.gossips.each do |gossip| %>
            <div class="list-group-item bg-transparent px-0 d-flex justify-content-between align-items-center gap-2 flex-wrap">
              <%= link_to gossip.title, gossip_path(gossip), class: "fw-medium text-decoration-none link-light" %>
              <div class="d-flex gap-1">
                <% if current_user == gossip.user %>
                  <%= link_to "Modifier", edit_gossip_path(gossip), class: "btn btn-outline-light btn-sm" %>
                  <%= button_to "Supprimer", gossip_path(gossip), method: :delete,
                      class: "btn btn-outline-danger btn-sm",
                      form: { data: { turbo_confirm: "Supprimer ce potin ?" } } %>
                <% else %>
                  <%= link_to "Lire", gossip_path(gossip), class: "btn btn-outline-light btn-sm" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <% if @user.gossips.empty? %>
          <div class="alert alert-dark border-secondary-subtle mt-3 mb-0" role="alert">
            <%= current_user && current_user.id == @user.id ? "Tu n'as encore publié aucun potin." : "Cet utilisateur n'a encore publié aucun gossip." %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
