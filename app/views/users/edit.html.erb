<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Profil</p>
      <h1 class="display-5 mb-3">Mon profil</h1>
      <p class="lead text-body-secondary mb-0">
        Mets à jour les informations de ton profil public.
      </p>
    </div>
  </div>
</section>

<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with model: @user, local: true do |form| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2 class="h6 mb-2"><%= pluralize(@user.errors.count, "erreur") %> ont empêché la mise à jour du profil :</h2>
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :first_name, "Prénom", class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :last_name, "Nom", class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Bio", class: "form-label" %>
          <%= form.text_area :description, rows: 3, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :age, "Âge", class: "form-label" %>
          <%= form.number_field :age, class: "form-control", min: 0 %>
        </div>

        <div class="mb-3">
          <%= form.label :city_name, "Ville", class: "form-label" %>
          <%= form.text_field :city_name,
                class: "form-control",
                value: @user.city&.name,
                required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :city_zip_code, "Code postal", class: "form-label" %>
          <%= form.text_field :city_zip_code,
                class: "form-control",
                value: @user.city&.zip_code,
                required: true %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Enregistrer", class: "btn btn-gossip" %>
          <%= link_to "Annuler", user_path(@user), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

