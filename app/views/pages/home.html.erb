<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <h1 class="display-5 mb-3">Bienvenue sur The Gossip Project</h1>
      <p class="lead text-body-secondary mb-0">
        Les histoires du moment, triées par édition, pour celles et ceux qui veulent tout savoir avant tout le monde.
      </p>
    </div>
  </div>
</section>

<section>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h3 mb-0">Trending Stories</h2>
    <span class="badge rounded-pill text-bg-danger"><%= @gossips.count %> publie(s)</span>
  </div>

  <div class="row g-4">
    <% @gossips.each do |gossip| %>
      <div class="col-12 col-md-6 col-xl-4">
        <article class="card h-100 shadow-sm gossip-card">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start gap-2 mb-3">
              <span class="badge text-bg-dark border border-secondary-subtle">Exclusif</span>
              <small class="text-body-secondary">Par <%= gossip.user.first_name %></small>
            </div>
            <h3 class="h5 card-title"><%= gossip.title %></h3>
            <p class="card-text text-body-secondary mb-4">
              <%= truncate(gossip.content, length: 115) %>
            </p>
            <div class="mt-auto">
              <%= link_to "Lire le dossier", gossip_path(gossip), class: "btn btn-gossip btn-sm" %>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </div>

  <% if @gossips.empty? %>
    <div class="alert alert-dark border-secondary-subtle mt-3 mb-0" role="alert">
      Aucune rumeur publiée pour le moment.
    </div>
  <% end %>
</section>
