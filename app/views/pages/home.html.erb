<section class="mb-4">
  <div class="card shadow-sm overflow-hidden gossip-card">
    <div class="card-body p-4 p-md-5">
      <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
        <h1 class="display-5 mb-0">Bienvenue sur THP Gossip Project</h1>
        <%= link_to "Nouveau potin", new_gossip_path, class: "btn btn-home-footer flex-shrink-0" %>
      </div>
      <p class="lead text-body-secondary mb-0">
        Votre espace potin pour partager vos petits secrets, actuces et conseils pour réussir votre formation <%= link_to "The Hacking Project.", "https://www.thehackingproject.org", target: "_blank", rel: "noopener", class: "link-primary link-offset-2 text-decoration-none" %>
      </p>
    </div>
  </div>
</section>

<section>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h3 mb-0">Potins à la une</h2>
    <span class="badge rounded-pill badge-login-style"><%= @gossips.count %> publie(s)</span>
  </div>

  <div class="row g-4">
    <% @gossips.each do |gossip| %>
      <div class="col-12 col-md-6 col-xl-4">
        <article class="card h-100 shadow-sm gossip-card">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start gap-2 mb-3">
              <span class="badge text-bg-dark border border-secondary-subtle">Exclusif</span>
              <small class="text-body-secondary">Par <%= gossip.user.first_name %></small>
            </div>
            <h3 class="h5 card-title"><%= gossip.title %></h3>
            <p class="card-text text-body-secondary mb-4">
              <%= truncate(gossip.content, length: 115) %>
            </p>
            <div class="mt-auto">
              <%= link_to "Lire le dossier", gossip_path(gossip), class: "btn btn-home-footer btn-sm" %>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </div>

  <% if @gossips.empty? %>
    <div class="alert alert-dark border-secondary-subtle mt-3 mb-0" role="alert">
      Aucune rumeur publiée pour le moment.
    </div>
  <% end %>
</section>
