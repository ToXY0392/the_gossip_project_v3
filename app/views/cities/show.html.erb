<section class="mb-4">
  <div class="card shadow-sm overflow-hidden gossip-card">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Ville</p>
      <h1 class="display-5 mb-0"><%= @city.name %></h1>
      <p class="text-body-secondary mb-0 mt-1"><%= @city.zip_code %></p>
    </div>
  </div>
</section>

<section>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h3 mb-0">Potins de la ville</h2>
    <span class="badge rounded-pill badge-login-style"><%= @gossips.count %> potin(s)</span>
  </div>

  <div class="row g-4">
    <% @gossips.each do |gossip| %>
      <div class="col-12 col-md-6 col-xl-4">
        <article class="card h-100 shadow-sm gossip-card position-relative">
          <div class="card-body d-flex flex-column">
            <%= link_to "", gossip_path(gossip), class: "stretched-link", aria: { label: "Lire le dossier #{gossip.title}" } %>
            <div class="d-flex justify-content-between align-items-start gap-2 mb-3">
              <small class="text-body-secondary">Par <%= gossip.user.first_name %></small>
            </div>
            <h3 class="h5 card-title"><%= gossip.title %></h3>
            <p class="card-text text-body-secondary mb-4">
              <%= truncate(gossip.content, length: 115) %>
            </p>
            <div class="mt-auto d-flex flex-wrap gap-2 align-items-center position-relative" style="z-index: 1">
              <% if current_user %>
                <% current_like = gossip.likes.find_by(user: current_user) %>
                <% if current_like %>
                  <%= button_to like_path(current_like),
                                method: :delete,
                                class: "btn btn-home-footer-danger btn-sm ms-auto d-inline-flex align-items-center justify-content-center",
                                title: "Retirer ton like" do %>
                    <i class="bi bi-hand-thumbs-up-fill"></i>
                  <% end %>
                <% else %>
                  <%= button_to likes_path(likeable_type: "Gossip", likeable_id: gossip.id),
                                method: :post,
                                class: "btn btn-home-footer btn-sm ms-auto d-inline-flex align-items-center justify-content-center",
                                title: "Liker ce potin" do %>
                    <i class="bi bi-hand-thumbs-up"></i>
                  <% end %>
                <% end %>
              <% else %>
                <span class="text-body-secondary small ms-auto"><%= gossip.likes.count %> like(s)</span>
              <% end %>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </div>

  <% if @gossips.empty? %>
    <div class="alert alert-dark border-secondary-subtle mt-3 mb-0" role="alert">
      Aucun potin pour cette ville pour le moment.
    </div>
  <% end %>
</section>
