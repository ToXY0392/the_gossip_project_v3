<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Édition</p>
      <h1 class="display-5 mb-3">Modifier le commentaire</h1>
      <p class="lead text-body-secondary mb-0">
        Potin : <%= link_to @comment.gossip.title, gossip_path(@comment.gossip), class: "link-light link-offset-2" %>
      </p>
    </div>
  </div>
</section>

<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with model: @comment, url: comment_path(@comment), local: true do |form| %>
        <% if @comment.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2 class="h6 mb-2"><%= pluralize(@comment.errors.count, "erreur") %> :</h2>
            <ul class="mb-0">
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :content, "Commentaire", class: "form-label" %>
          <%= form.text_area :content, rows: 3, class: "form-control", required: true %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Mettre à jour", class: "btn btn-gossip" %>
          <%= link_to "Annuler", @comment.gossip, class: "btn btn-outline-secondary" %>
          <%= button_to "Supprimer le commentaire",
                        comment_path(@comment),
                        method: :delete,
                        form: { data: { turbo_confirm: "Supprimer ce commentaire ?" }, class: "d-inline" },
                        class: "btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
