<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with url: login_path, method: :post, local: true, html: { class: "form-login" } do |form| %>
        <% if flash.now[:alert].present? %>
          <div class="alert alert-danger" role="alert">
            <%= flash.now[:alert] %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Mot de passe", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true, autocomplete: "current-password" %>
        </div>

        <div class="mb-3 form-check">
          <%= check_box_tag :remember_me, "1", false, class: "form-check-input" %>
          <%= label_tag :remember_me, "Se souvenir de moi", class: "form-check-label" %>
        </div>

        <div class="mb-4 text-center">
          <%= form.submit "Se connecter", class: "btn btn-gossip btn-login-submit" %>
        </div>
      <% end %>

      <hr class="my-4 text-secondary">

      <p class="text-body-secondary mb-2 text-center">Tu n'as pas encore de compte ?</p>
      <div class="text-center">
        <%= link_to "CrÃ©er un profil", signup_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</section>

