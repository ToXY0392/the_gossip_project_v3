<section class="mb-4">
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="card-body p-4 p-md-5">
      <p class="gossip-kicker text-uppercase mb-2">Connexion</p>
      <h1 class="display-5 mb-3">Se connecter</h1>
      <p class="lead text-body-secondary mb-0">
        Retrouve ton profil pour signer de nouveaux potins.
      </p>
    </div>
  </div>
</section>

<section>
  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= form_with url: login_path, method: :post, local: true, html: { class: "form-login" } do |form| %>
        <% if flash.now[:alert].present? %>
          <div class="alert alert-danger" role="alert">
            <%= flash.now[:alert] %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :first_name, "Prénom", class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :last_name, "Nom", class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control", required: true %>
        </div>

        <div class="mb-4">
          <%= form.submit "Se connecter", class: "btn btn-gossip btn-login-submit" %>
        </div>
      <% end %>

      <hr class="my-4 text-secondary">

      <p class="text-body-secondary mb-2">Tu n'as pas encore de compte ?</p>
      <%= link_to "Créer un profil", signup_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</section>

